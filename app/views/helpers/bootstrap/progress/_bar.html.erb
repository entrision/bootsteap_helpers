<div <%= options.to_s(included_classes: ['progress']) %>>
  <div class="progress-bar <%= striped ? 'progress-bar-striped' : '' %>  <%= animated ? 'progress-bar-animated' : '' %> bg-<%= color %>" role="progressbar" style="width: <%= percentage %>%; <%= options.styles.join(';') %>" aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100">
    <%= label %>
  </div>
</div>
